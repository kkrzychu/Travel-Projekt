
<%- include("../partials/header")  %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            
            <h1>Wycieczki</h1>
            <p>Twoje wymarzone wakacje. Wyjedź z nami na wczasy all inclusive!</p>
            <% if( currentUser && currentUser.isAdmin) { %>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Dodaj nową wycieczkę</a>
                </p>
            <% } else { %>
                
            <% } %>

            <p>
                <form action="/campgrounds" method="get" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Wyszukaj wycieczkę" class="form-control">
                        <input type="submit" value="Search"  class="btn btn-primary">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campgrounds) { %>
            <div class="col-sm-3">
                <div class="img-thumbnail">
                    <img class="img-thumbnail" src="<%=campgrounds.image%>">
                    <div class="caption">
                        <h4><%= campgrounds.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary btn-sm">Więcej Informacji</a>
                    </p>
                </div>
            </div>
            
        <% }); %>
    </div>
</div>
<%- include("../partials/footer")  %>